@using WebMvc.Models
@model IEnumerable<WebMvc.Models.FriendViewModel>
@{
    var friends = TempData.Peek("Friends");
}

<h2>Primeiro Formulario</h2>

<div class="form-horizontal">
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <td>Lista</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var friend in (IEnumerable<FriendViewModel>)friends)
            {
                <tr>
                    <td> @Html.CheckBox("Selected", friend.Selected) </td>
                    <td> @friend.Name </td>
                    <td> @friend.LastName </td>
                    <td> @friend.Email </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a class="btn btn-link" href="../SecondFriend/Index">Segunda pagina</a>
